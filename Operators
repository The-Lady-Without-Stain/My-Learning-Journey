
n = (input ("Enter numbers separated by spaces: ")).split()
numbers = [int(num) for num in n]
largest = numbers [0]
smallest = numbers [0]
for number in numbers:
    if number > largest:
        largest = number
    if number < smallest:
        smallest = number
print ("largest number is:", largest)
print ("smallest number is:", smallest)


def even_odd(var):
    if var % 2 == 0:
        return "even"
    elif var % 2 != 0:
        return "odd"
    else:
        return "none"

print(even_odd(13))  